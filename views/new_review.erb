<h2>
    <i class="fas fa-map-marker-alt"></i>
    <%= @location[:title] %>
</h2>
<h2>Leave a comment on <%= @location[:title] %></h2>

<form action="/location/<%= @location[:id] %>/reviews/create" method="post">
  <div class="form-group">
    <label>Are you a local from <%= @location[:title] %>?</label>
    <select class="form-control" name="local">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </select>
  </div>
  <div class="form-group">
    <label>Rating (out of 5)</label>
    <textarea class="form-control" rows="1" name="rating"></textarea>
  </div>
  <div class="form-group">
    <label>Provide a summary</label>
    <textarea class="form-control" rows="1" name="summary"></textarea>
  </div>
  <div class="form-group">
    <label>Comments</label>
    <textarea class="form-control" rows="5" name="comments"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

